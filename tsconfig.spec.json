{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jest"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Bundler"
  },
  "files": [
    "setup-jest.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.ts"
  ]
}